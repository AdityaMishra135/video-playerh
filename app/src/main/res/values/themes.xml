<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <attr name="themeColor" format="color"/>

    <style name="Base.Theme.VideoPlayer" parent="Theme.AppCompat.Light">
        <item name="themeColor">@color/white</item>
        <item name="colorPrimary">?attr/themeColor</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="statusBarBackground">?attr/themeColor</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:statusBarColor">?attr/themeColor</item>
        <item name="android:titleTextColor">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Dark_mode" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="themeColor">@color/special</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorPrimary">?attr/themeColor</item>
        <item name="android:navigationBarColor">?attr/themeColor</item>
        <item name="statusBarBackground">?attr/themeColor</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:statusBarColor">?attr/themeColor</item>
        <item name="android:titleTextColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="Player_theme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.VideoPlayer" parent="Base.Theme.VideoPlayer" />

    <!-- Splash screen theme. -->
    <style name="splash_theme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:navigationBarColor">#2c2c2c</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <!-- for Alert dialog. -->
        <style name="AlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
                <item name="android:textColor">@color/white</item>
        </style>

    <style name="alert_dialog_theme_light" parent="android:style/Theme.Light">
        <item name="android:textColor">@color/black</item>
        <item name="android:colorPrimary">@color/black</item>
    </style>


<!--    <style name="AlertDialogTheme2" parent="Theme.AppCompat.Dialog.Alert">-->
<!--        <item name="textAllCaps">false</item>-->
<!--        <item name="butto"-->
<!--    </style>-->
    
    <style name="BottomSheetTheme" parent="Theme.Material3.Light.BottomSheetDialog" >
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Material3.BottomSheet.Modal" >
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
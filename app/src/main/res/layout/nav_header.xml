<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:layout_marginTop="70dp"
    android:paddingTop="20dp"
    android:id="@+id/nav_head"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/allow_color">

    <ImageView
        android:id="@+id/header_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:src="@drawable/bg_logo" />

    <TextView
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Your Videos\nIn One Place"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/header_image"
        app:layout_constraintStart_toStartOf="@id/header_image"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/email_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="engfred88@gmail.com"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/header_title"
        app:layout_constraintStart_toStartOf="@id/header_image"
        android:layout_marginTop="5dp"
        android:textColor="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>